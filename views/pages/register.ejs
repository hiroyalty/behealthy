<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>
</head>
<body class="container">

	<header>
		
	</header>

	<main>
		<div class="container">
				<div class="col-sm-6.col-md-4.col-md-offset-4">
					<h1 class="text-center">Registration Details</h1>
						<div class="signup-wall">
							<form class="form-signin", action="/signup", method="POST">
								<input type="text", name="username", class='form-control', placeholder='Username',required, autofocus></input>
								<input type="password", name="password", class='form-control nomargin', placeholder='Password',required></input>
								<input type="email", name="email", class='form-control', placeholder='Email',required, autofocus></input>
								<input type="text", name="firstName", class='form-control', placeholder='First Name',required, autofocus></input>
								<input type="text", name="lastName", class='form-control', placeholder='Last Name',required, autofocus></input>
								<button class="btn btn-lg btn-primary btn-block", type="submit">Register</button>
							</form>
							<span class="clearfix"></span>
						<% if(message!=null){ %>    
							<div>
								<h3 class="text-center.error-message"><%= message %></h3>
							</div>
						<%}%> 
						</div>
				</div>
		</div>
	</main>

	<footer>
		<% include ../partials/footer %>
	</footer>
	
</body>
</html>